{
    "manifest_version": 2,

    "name": "AdNauseam",
    "version": "2.0.2",

    "default_locale": "en",
    "description": "__MSG_extShortDesc__",
    "icons": {
        "16": "img/adn/icon_16.png",
        "128": "img/adn/icon_128.png"
    },

    "browser_action": {
        "default_icon": {
            "19": "img/browsericons/adn/icon19.png",
            "38": "img/browsericons/adn/icon19.png"
        },
        "default_title": "AdNauseam",
        "default_popup": "adn-popup.html"
    },

    "author": "Daniel C. Howe",
    "background": {
        "page": "background.html"
    },
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["js/vapi-client.js", "js/contentscript-start.js"],
            "run_at": "document_start",
            "all_frames": true
        },
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["js/contentscript-end.js"],
            "run_at": "document_end",
            "all_frames": true
        },
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["js/scriptlets/subscriber.js"],
            "run_at": "document_idle",
            "all_frames": false
        }
    ],
    "incognito": "split",
    "minimum_chrome_version": "22.0",
    "options_page": "dashboard.html",
    "permissions": [
        "contextMenus",
        "privacy",
        "storage",
        "tabs",
        "unlimitedStorage",
        "webNavigation",
        "webRequest",
        "webRequestBlocking",
        "http://*/*",
        "https://*/*"
    ],
    "short_name": "AdNauseam"
}
